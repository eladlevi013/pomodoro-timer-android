<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp">

    <ImageView
        android:layout_marginStart="25sp"
        android:id="@+id/session_img"
        android:layout_width="75sp"
        android:layout_height="75sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/session_img"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/session_goal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Goal"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/session_duration_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/session_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Duration"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/session_time_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/session_goal_tv" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/session_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Time"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/session_duration_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
